[Unit]
SourcePath=/etc/iptables.d/firewall
Description=Run iptables
Wants=ipset.service
After=networking.service ipset.service

[Service]
Type=forking
Restart=no
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
SuccessExitStatus=5 6
ExecStart=/etc/iptables.d/firewall start
ExecStop=/etc/iptables.d/firewall stop

[Install]
WantedBy=multi-user.target
